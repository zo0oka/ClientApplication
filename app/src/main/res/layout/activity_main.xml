<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/reply_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/start_service_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/start_service"
        app:layout_constraintEnd_toEndOf="@id/reply_text_view"
        app:layout_constraintStart_toStartOf="@id/reply_text_view"
        app:layout_constraintTop_toBottomOf="@id/reply_text_view" />

    <Button
        android:id="@+id/bind_service_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/bind_service"
        app:layout_constraintEnd_toEndOf="@id/reply_text_view"
        app:layout_constraintStart_toStartOf="@id/reply_text_view"
        app:layout_constraintTop_toBottomOf="@id/start_service_button" />

    <Button
        android:id="@+id/unbind_service_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/unbind_service"
        app:layout_constraintEnd_toEndOf="@id/reply_text_view"
        app:layout_constraintStart_toStartOf="@id/reply_text_view"
        app:layout_constraintTop_toBottomOf="@id/bind_service_button" />

    <Button
        android:id="@+id/request_popup_message_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/request_popup_message"
        app:layout_constraintEnd_toEndOf="@id/reply_text_view"
        app:layout_constraintStart_toStartOf="@id/reply_text_view"
        app:layout_constraintTop_toBottomOf="@id/unbind_service_button" />

</androidx.constraintlayout.widget.ConstraintLayout>